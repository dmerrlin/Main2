<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout__root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите название предмета" />

    <EditText
        android:id="@+id/editTextDialogUserInput1"
        android:layout_width="217dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите дату в Формате ДД.ММ" />

    <EditText
        android:id="@+id/editTextDialogUserInput2"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:hint="ДД.ММ"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите список студентов" />

    <EditText
        android:id="@+id/editTextDialogUserInput3"
        android:layout_width="217dp"
        android:layout_height="136dp">

        <requestFocus />

    </EditText>

</LinearLayout>